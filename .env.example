// Environment variables for portfolio configuration
// Copy this file to .env.local and update the values

# Data Source Configuration
# Options: "local" | "github" | "custom"
NEXT_PUBLIC_DATA_SOURCE=local

# If using GitHub as data source, provide the raw URL to your portfolio.json
NEXT_PUBLIC_GITHUB_DATA_URL=https://raw.githubusercontent.com/your-username/your-repo/main/public/data/portfolio.json

# If using a custom API endpoint
NEXT_PUBLIC_CUSTOM_API_URL=

# Base path for GitHub Pages deployment (e.g., /repo-name)
# Leave empty for root deployment
NEXT_PUBLIC_BASE_PATH=

# Site URL for SEO
NEXT_PUBLIC_SITE_URL=https://karammatar.com

# Enable/disable features
NEXT_PUBLIC_ENABLE_KIOSK_MODE=true
NEXT_PUBLIC_ENABLE_THEME_TOGGLE=true

# Contact form (if using external service)
NEXT_PUBLIC_CONTACT_FORM_URL=
